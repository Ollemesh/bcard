body
	font-family 'Roboto', sans-serif
	font-weight bold

.background
	position absolute
	top 0px
	left 0px
	width 100%
	height 100%

	background-image url(https://hd.unsplash.com/photo-1470928605339-7901da4eddf8)
	background-size cover

.background-cover
	position absolute
	top 0px
	left 0px
	width 100%
	height 100%
	background gray
	transition opacity 3s linear

	&_loaded
		opacity 0.3

.card
	position absolute
	top 50%
	left 50%
	width 600px
	height 330px
	transform translate(-50%, -50%)

	&__main-info
		float left
		width 45%
		height 330px
		background-color #87ccc3
		color white

	&__work-experiance
		float right
		width 55%
		height 330px
		background-color white

.main-info

	&__name
		text-align center
		font-weight 900

	&__age
		font-weight normal

	&__contact-block
		margin-top 20px

	&__CV-block
		position relative
		top 55px

.contact-block

	&__address
		cursor auto !important

	&__mail
		display block
		color white
		text-decoration none

	&__other-contact
		display inline-block
		margin-left 85px
		font-weight normal
		text-decoration underline
		font-size 15
		cursor pointer

.work-experiance

	&__header
		text-align center
		font-weight black
		font-size 25px
		margin-top 20px
		margin-bottom 15px

		& p
			margin-top 13px
			margin-bottom 5px

	&__cv
		margin-left 50%
		transform translateX(-12px)
		font-size 20px
		cursor pointer

	&__skills
		width 300px

.skills

	&__list
		margin 0
		margin-left 40px
		padding-left 0
		font-weight normal

	&__item
		list-style-type none

.examples

	&__js
		margin 0 0 0 40px

	&__web-pages
		margin 0 0 0 20px

	&__button
		font-family Roboto
		font-size 14px
		border none
		outline none
		background-color white
		color white
		background-color #87ccc3
		padding 3px

		&:hover
			background-color #63bdb1

		&:active
			position relative
			top 1px

.additionalContacts
	display inline-block
	position relative
	width 150px
	height 70px
	border 2px solid #63bdb1
	background-color white
	top -165px
	left 60px

	&__list
		display block
		margin 0
		padding 0

	&__item
		list-style-type none

.info-block
	margin-left 35px
	width 250px
	height 25px
	margin-bottom 10px
	cursor pointer

.icon
	float left
	width 30px
	height 25px
	font-size 20px
	transform translateY(-3px)

.second-header
	margin-left 20px
	font-size 18px
	margin-top 5px
	margin-bottom 10px